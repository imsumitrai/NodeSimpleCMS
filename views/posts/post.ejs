<!DOCTYPE html>
<html>
  <head>
        <% include ../partial/header %>
  </head>
  <body>
        <% include ../partial/navbar %>
      <div class="container">
          <div class="row">
              <div class="col-sm-3">

              </div>
              <div class="col-sm-6">
                    <form method="POST">
                            <h1><%= title %></h1>
                            <%if(messages.error){ %>
                                <div class="alert alert-danger" role="alert">
                                    <%= messages.error %>
                                </div>
                            <% } %>
                            <%if(messages.status){ %>
                                <div class="alert alert-danger" role="alert">
                                    <%= messages.status %>
                                </div>
                            <% } %>
                            <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="name" name="title" class="form-control" placeholder="Title" value="<%= post.title %>">
                            </div>
                            <div class="form-group">
                                <label>Slug</label>
                                <input type="name" name="slug" class="form-control" placeholder="Slug" value="<%= post.slug %>">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea name="description" class="form-control" placeholder="Description"><%= post.description %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
              </div>
              <div class="col-sm-3">

              </div>
          </div>
      </div>
      
      <% include ../partial/footer %>
  </body>
</html>
